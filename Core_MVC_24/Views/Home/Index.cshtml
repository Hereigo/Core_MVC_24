@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <div class="row">
        <div class="col-5"></div>
        <div class="col-2">

            <div id="homeForm">
                <form asp-action="TestSubmit">
                    <div class="form-group">
                        <label class="control-label"></label>
                        <input type="password" class="form-control" id="blablatest" name="blablatest" />
                    </div>
                    <div class="form-group">
                        <input type="submit"
                               value="@(ViewBag.fileExists ? "Finilize" : "Begin")"
                               class="btn @(ViewBag.fileExists ? "btn-danger" : "btn-primary")" />
                    </div>
                </form>
            </div>

            <div id="homeLoader"></div>

        </div>
        <div class="col-5"></div>
    </div>
</div>