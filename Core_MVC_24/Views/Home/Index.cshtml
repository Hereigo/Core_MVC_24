@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <div class="row">
        <div class="col-5"></div>
        <div class="col-2">

            <div id="homeForm">
                <form asp-action="TestSubmit">
                    <div class="form-group">
                        <label class="control-label"></label>
                        <input type="password" class="form-control" id="blablatest" name="blablatest" />
                    </div>
                    <div class="form-group">
                        <input type="submit"
                               value="@(ViewBag.fileExists ? "Finilize" : "Begin")"
                               class="btn @(ViewBag.fileExists ? "btn-danger" : "btn-primary")" />
                    </div>
                </form>
            </div>

            <div id="homeLoader"></div>

        </div>
        <div class="col-5"></div>
    </div>

    <hr />

    <div class="row">
        <div class="mt-4 row justify-content-center">
            <div class="list-group col-6">

                <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="UploadFile">
                    <div class="mb-2">
                        <label for="fileToUpload" class="form-label">
                            Select File to Upload
                        </label>
                        <input id="fileToUpload" name="fileToUpload" type="file" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <button class="btn btn-primary">Upload</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>